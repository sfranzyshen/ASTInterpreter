content=// Pointers and Pointer Arithmetic
void setup() {
  Serial.begin(9600);
}

void loop() {
  int arr[3] = {10, 20, 30};
  int *ptr = arr;

  Serial.print("First element: ");
  Serial.println(*ptr);

  ptr++;
  Serial.print("Next element: ");
  Serial.println(*ptr);

  int nextVal = *(ptr + 1);
  Serial.print("Next value with arithmetic: ");
  Serial.println(nextVal);
}